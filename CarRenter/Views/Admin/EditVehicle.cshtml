@model CarRenter.Models.VehicleViewModel

@{
    ViewData["Title"] = "Edytuj samochód";
}

<h2>Edytuj samochód</h2>

<form asp-action="EditVehicle" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Marka" class="form-label"></label>
        <input asp-for="Marka" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Rok" class="form-label"></label>
        <input asp-for="Rok" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Opis" class="form-label"></label>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="UrlObrazka" class="form-label"></label>
        <input asp-for="UrlObrazka" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="KwotaZaDzien" class="form-label"></label>
        <input asp-for="KwotaZaDzien" class="form-control" step="0.01" type="number" />
        <small class="text-muted">Użyj kropki jako separatora dziesiętnego, np. 800.00</small>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Vehicles" class="btn btn-secondary">Anuluj</a>
</form>

