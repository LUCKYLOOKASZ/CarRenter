@model VehicleDto

<h2>Dodaj nowy samochód</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Marka</label>
        <input asp-for="Marka" class="form-control" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rok</label>
        <input asp-for="Rok" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Kwota za dzień (zł)</label>
        <input asp-for="KwotaZaDzien" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Opis</label>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>URL obrazka (np. nazwa.png)</label>
        <input asp-for="UrlObrazka" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Dodaj</button>
    <a asp-action="Admin" class="btn btn-secondary">Anuluj</a>
</form>
